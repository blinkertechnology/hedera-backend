generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(cuid())
  name            String
  email           String         @unique
  password        String?

  hederaAccId     String
  hederaPubKey    String

  status          Status
  role            Role           @default(MEMBER)
  sessions        Session[]
}

model Session {
  id              String         @id @default(cuid())
  userId          String
  expiresAt       DateTime
  user            User           @relation(references: [id], fields: [userId], onDelete: Cascade)
}


// ENUMS
enum Role {
  MEMBER
  MASTER
  ADMIN
}
enum Status {
  PENDING
  ACTIVE
  DISABLED
}
